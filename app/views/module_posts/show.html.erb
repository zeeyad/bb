<section id="section-module">
  <div class="container">
    <div class="row">
      <div class="col-md-8 offset-md-2 section-module-column ">
        <h1 class="text-center"><%= @module_post.title %></h1>
        <br>
        <p><%= @module_post.description %></p>
        <p><%= @module_post.user.name.titleize %> posted <i ><%= time_ago_in_words(@module_post.created_at) %> ago </i></p>
      </div>
    </div>
  </div>
</section>
