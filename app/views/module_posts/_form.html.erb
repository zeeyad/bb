<%= form_for @module_post do |f| %>

  <div class="form-group">
  	<%= f.label :title %>
  	<%= f.text_field :title, class: "form-control" %>
  </div>


  <div class="form-group">
  	<%= f.label :description %>
  	<%= f.text_area :description, class: "form-control" %>
  </div>

  <%= f.submit "Save", class: "btn btn-primary btn-block" %>
<% end %>