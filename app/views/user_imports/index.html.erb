<section id="section-module">
  <div class="container">
    <div class="row">
      <div class="col-md-12 section-module-column">

        <h1>User Import</h1>

        <p>A CSV or Excel file can be used to import records. The first row should be the column name. The following columns are allowed.</p>

        <p>Column Required</p>
         <ul>
          <li>studreg</li>
         </ul>

        <p>If an <strong>id</strong> is supplied it will update the matching record instead of creating a new one.</p>

        <%= form_for @user_import do |f| %>

          <% if @user_import.errors.any? %>
            <div class="row">
              <div class="col-md-12 ">
                <div class="alert alert-danger">
                    <h3 class="card-title">
                      <a href="#" class="close" data-dismiss="alert">Ã—</a>
                      Check Errors in the Following Row
                    </h3>
                    <div class="card-block">
                      <ul>
                        <% @user_import.errors.full_messages.each do |msg| %>
                          <li><%= msg %></li>
                        <% end %>
                      </ul>
                    </div>
                </div>
              </div>
            </div>

          <% end %>

          <div class="">
            <%= f.file_field :file %>
          </div>
          <div class="col-md-4 offset-md-5 buttons"><%= f.submit "Import" %></div>
        <% end %>

      </div>

    </div>
  </div>
</section>


