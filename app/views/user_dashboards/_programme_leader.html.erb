<div class="row dashboard-listing" id ="listing-post">
	<% if @pending_activities.empty? %>
		<li class="list-group-item">No Posts</li>
	<% else %>
		<div class="col-md-12">
			<h1 align="center">Post Submitted ( <%= @total_post %> )</h1><br>
		</div>

		<%= render 'activity_post_submitted' %>
		
		<%= render 'event_post_submitted' %>

		<%= render 'module_post_submitted' %>
	<% end %>
</div>
<br>

