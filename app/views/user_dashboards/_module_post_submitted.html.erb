<div class="col-md-12">
	<h1 align="center">Module Post ( <%= @pending_modules.count %> )</h1><br>
</div>

<% @pending_modules.each do |modulepost| %>
	<div class="col-lg-4">
	  	<div class="card">
	      	<h4 class="card-header navbar-dark bg-dark"><%= modulepost.title %></h4>
		    <a href="<%= module_post_path(modulepost) %>">
			  <li class="list-group-item"><%= truncate(modulepost.description, length: 280) %></li>
		    </a>
		    <div class="card-footer">
				<%= link_to 'Approve', approve_activity_post_path(modulepost), class: "btn btn-primary btn-block", id: "approve_#{modulepost.id}", data: {confirm: "Are you sure you want to approve?"} %>
				<%= link_to 'Review', edit_activity_post_path(modulepost), class: "btn btn-success btn-block", id: "edit_#{modulepost.id}" %>
				<%= link_to 'Reject', reject_activity_post_path(modulepost), class: "btn btn-danger btn-block", id: "reject_#{modulepost.id}", data: {confirm: "Are you sure you want to reject?"} %>
			</div>
	    </div>
	    <br>
	</div>
<% end %>